---
import Section from "@/components/Section.astro";
import { basics } from "@cv";

import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import Twitter from "@/icons/twitter.astro";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import WorldMap from "@/icons/WorldMap.astro";

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  Twitter,
  LinkedIn,
};

const { name, label, location, image, profiles, phone, email } = basics;
const { city, region } = location;
---

<Section>
  <div class="flex flex-row items-center justify-between gap-4">
    <div class="flex flex-col gap-2 pr-8">
      <h1 class="text-[2rem] font-bold">{name}</h1>
      <h2 class="text-gray-600 text-xl text-balance">{label}</h2>
      <span
        class="flex text-gray-500 items-center gap-1 text-sm -tracking-tighter"
      >
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="flex gap-1 mt-2 no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Enviar un correo electronico a ${name} al correo ${email}`}
              target="_blank"
              rel="noopener noreferrer"
              class="anclerIcon"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Llamar por telefono a ${name} al numero ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
              class="anclerIcon"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, url, username }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target="_blank"
                rel="noopener noreferrer"
                class="anclerIcon"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img
        src={image}
        alt={name}
        class="aspect-square object-cover w-48 rounded-2xl"
      />
    </figure>
  </div>
</Section>
