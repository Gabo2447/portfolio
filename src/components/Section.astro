---
type Props = { title?: string; className?: string };

const { title, className } = Astro.props;
---

<section
  class={`max-w-[700px] mx-auto mt-0 mb-16 h-auto flex flex-col gap-y-5 ${className}`}
>
  {title && <h2 class="font-bold leading-6 text-2xl">{title}</h2>}
  <main>
    <slot />
  </main>
</section>
